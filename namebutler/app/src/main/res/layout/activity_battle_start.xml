<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- バトル開始画面 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/enemy_members1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="敵メンバー1" />

        <TextView
            android:id="@+id/enemy_members2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="敵メンバー2" />

        <TextView
            android:id="@+id/enemy_members3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="敵メンバー3" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:layout_gravity="center_horizontal"
        android:text="VS" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ally_members1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="仲間メンバー1" />

        <TextView
            android:id="@+id/ally_members2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="仲間メンバー2" />

        <TextView
            android:id="@+id/ally_members3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="仲間メンバー3" />
    </LinearLayout>

    <Button
        android:id="@+id/battle_start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="この相手と戦う" />

    <Button
        android:id="@+id/reselect_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相手を選びなおす" />

</LinearLayout>